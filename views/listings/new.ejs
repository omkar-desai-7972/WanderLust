<% layout('/layouts/boilerPlate') -%>
    <body>
        <br>
        <div class="row">
            <div class="col-8 offset-2">
                <form action="/listings" method="post" class="needs-validation" novalidate  enctype="multipart/form-data">
                    <h3>Create a New Listing</h3>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" type="text" class="form-control" placeholder="Add a catchy Title"
                            required>
                        <div class="valid-feedback">Title Looks Good!</div>
                        <div class="invalid-feedback">Title is required</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" type="text" class="form-control" required></textarea>
                        <div class="invalid-feedback">Description should be valid</div>
                    </div>
                    <!-- <div class="mb-3">
                        <label for="image" class="form-label">Image Link</label>
                        <input name="listing[image]" type="text" class="form-control"
                            placeholder="Enter a Image URL/Link">
                    </div> -->

                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Listing Image</label>
                        <input name="listing[image]" type="file" class="form-control" required>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="price" class="form-label">Price</label>
                                <input name="listing[price]" type="text" class="form-control" placeholder="1200" required>
                            </div>
                            <div class="invalid-feedback">price should be valid</div>
                        </div>
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label for="location" class="form-label">Location</label>
                                <input name="listing[location]" type="text" class="form-control" placeholder="Jaipur" required>
                            </div>
                            <div class="invalid-feedback">Location should be valid</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" type="text" class="form-control" placeholder="India" required>
                        <div class="invalid-feedback">Country should be valid</div>
                    </div>
                    <button class="btn btn-dark add-btn">Submit</button>
                </form>
                <br><br>
            </div>
        </div>
    </body>


    <!-- offset means spacing from left -->