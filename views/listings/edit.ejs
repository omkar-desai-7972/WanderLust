<%layout("/layouts/boilerPlate")-%>
    <body>
        <form action="/listings/<%=listing._id%>/?_method=put" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="row mt-3">
                <div class="col-8 offset-2"> 
                    <div class="mb-3">
                        <h3>Edit your Listing</h3>
                        <label for="title" class="form-label">Title</label>
                        <input value="<%=listing.title%>" name="listing[title]" type="text" class="form-control"
                            required>
                        <div class="valid-feedback">Title Looks Good!</div>
                        <div class="invalid-feedback">Title is required</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea type="text" name="listing[description]" class="form-control"
                            required><%=listing.description%></textarea>
                        <div class="invalid-feedback">Description should be valid</div>
                    </div>

                    <div class="mb-3">
                        Original Listing Image <br>
                        <img src="<%=originalImageUrl%>">
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Upload New Image</label>
                        <input  name="listing[image]" type="file" class="form-control"
                            required>
                       
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="price" class="form-label">Price</label>
                                <input value="<%=listing.price%>" name="listing[price]" type="number"
                                    class="form-control" required>
                            </div>
                        <div class="invalid-feedback">Price should be valid</div>
                        </div>
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label for="location" class="form-label">Location</label>
                                <input value="<%=listing.location%>" name="listing[location]" type="text"
                                    class="form-control" required>
                            </div>
                            <div class="invalid-feedback">Location should be valid</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input value="<%=listing.country%>" name="listing[country]" type="text" class="form-control"
                            required>
                        <div class="invalid-feedback">Country-Name should be valid</div>
                    </div>
                    <button class="btn btn-dark edit-btn mt-3">Edit</button>
        </form>
        <br><br>
        </div>
        </div>
    </body>